<div class="container">
        <div class="page-header">
          <h1>Signup to MyApp</h1>
        </div>
        <div class="row">
          <div class="span6 offset3">
            <h4 class="widget-header"><i class="icon-gift"></i> Be a part of MyApp</h4>
            <div class="widget-body">
              <div class="center-align">
              
                <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal form-signin-signup"}) do |f| %>
                  
                  <%= devise_error_messages! %>
                  
                  <%= f.email_field :email, :autofocus => true, :placeholder => "Email" %>
                  
                  <%= f.password_field :password, :placeholder => "Password" %>
                  
                  <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %>
                  
                  <div>
                  	<%= f.submit "Signup", :class=>"btn btn-primary btn-large"%>
                  </div>
                <% end %>
                
                <h4><i class="icon-question-sign"></i> Already have an account?</h4>
                <%= link_to "Signin", new_user_session_path, :class => "btn btn-large bottom-space"%>
                <h4><i class="icon-thumbs-up"></i> Sign in with third party account</h4>
                <ul class="signin-with-list">
                  <li>
                    <a class="btn-twitter">
                      <i class="icon-twitter icon-large"></i>
                      Signin with Twitter
                    </a>
                  </li>
                  <li>
                    <a class="btn-facebook">
                      <i class="icon-facebook icon-large"></i>
                      Signin with Facebook
                    </a>
                  </li>
                  <li>
                    <a class="btn-google">
                      <i class="icon-google-plus icon-large"></i>
                      Signin with Google
                    </a>
                  </li>
                  <li>
                    <a class="btn-github">
                      <i class="icon-github icon-large"></i>
                      Signin with Github
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>